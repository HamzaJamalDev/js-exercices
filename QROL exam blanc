//script.js

//exo1
somme =0;
 function sommen(n){
    for (let i=1;i<n;i++){
        if(n<50){
           if (  (i % 3 === 0) && ( i % 5 === 0)){
            somme +=i;
        } 
        }
        

    }
    return somme;
 }

 console.log(sommen(49)); 

///exo2

 let tab=[1,-2,3,0,-1];
 let tab2=[];
 let tab3=[];

 for (let i=0;i<=4;i++){

    if(tab[i]<0){
        tab2.push(tab[i]);
    }
    if(tab[i]>=0){
        tab3.push(tab[i]);
    }

   
 }
 console.log(tab2);
 console.log(tab3);

////exo3

function Chapitre(nom,nombre_page,position){

    this.nom=nom;
    this.nombre_page=nombre_page;
    this.position=position;

}
Chapitre.prototype.chapitreLong=function(){
    return this.nombre_page>100 ;
}
function Livre (id,titre,prix,Chapitre=[]){
    this.id=id;
    this.titre=titre;
    this.prix=prix;
    this.Chapitre=Chapitre;
}
Livre.prototype.sauterLongsChapitres=function(){
    let liv =[];
    for(let i=0;i<this.Chapitre.length;i++){
        if(this.Chapitre[i].nombre_page >100)
        liv.splice(this.Chapitre[i].nombre_page,0);
    }
   

}

let Chapitre_1=new Chapitre("intro",20,1);
let Chapitre_2=new Chapitre("chap2",200,2);
let Livre1=new Livre (1,"a premiere vue",200,[Chapitre_1,Chapitre_2]);
console.log(Chapitre_1.chapitreLong());
